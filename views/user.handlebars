    {{!-- user image upload form --}}
    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#uploadFormContainer" aria-expanded="false" aria-controls="uploadFormContainer">Upload new art here</button>
    <div class="collapse expandFooter" id="uploadFormContainer">
        <div class="card card-body">
            <form action="POST" id="imageUpload">
                <input type="file" name="imgUpload" id="imgUpload">
                <button type="submit" form="imageUpload">Submit image</button>
