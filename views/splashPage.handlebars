<div class="container-fluid" id="background-area">
    <div class="main">
        {{> header splash=true}}

        <div class="row-fluid mt-4 mb-3">
            <div class="col text-center">
                <a href="/gallery"><button type="button" class="btn btn-primary btn-lg mt-4" id="gallery">View Gallery</button></a>

            </div>
        </div>
        <div class="row-fluid mt-3">
            <div class="col text-center align-middle">
            <button type="button" class="btn btn-primary btn-lg mt-4" data-toggle="modal" data-target="#loginModal">Login</button>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="loginModalTitle">Login here</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <label for="username">Username</label>
                    <input type="text" name="username" id="username"><br>
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password"><br>
                    <a href="/signup" class="mt-1">Not a user? Sign up here!</a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" id="sendLogin">Login</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- listen for login and handle form --}}
<script>

    $(function() {
        console.log("runs")
        $("#sendLogin").on("click", function(event) {
            event.preventDefault();
            const userLogin = {
                username: $("#username").val().trim(),
                password: $("#password").val()
            }
            console.log("User login", userLogin);
            $.ajax({
                headers: {
                    "Content-Type": "application/json"
                },
                type: "POST",
                url: "api/login",
                data: JSON.stringify(userLogin)
                })
                .then(function(data) {  
                    console.log(data);       
                    window.location.replace("/gallery");
                });
        })
    });
</script>
